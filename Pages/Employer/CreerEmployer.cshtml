@page "/CreerEmployer"
@model AST1.Pages.Employer.loginModel
@{
    var message=ViewData["Message"]?.ToString();
}
<title>Créer un nouveau employer</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container-fluid">
    <div class="row">    
        <div class="col-md-4 bg-black text-white p-3">
            <div class="mb-4">
              
            </div>
            <div class="mb-4">
                <button class="btn btn-dark btn-block mb-2" onclick="RedirectAcceuil()">
                    <i class="fas fa-home"></i> Acceuil
                    <script>
                        function RedirectAcceuil() {
                        window.location.href = "/Home";}
                      </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onclick="RedirectDisponibilite()">
                    <i class="fas fa-calendar-alt"></i> Disponibilité
<script>
function RedirectDisponibilite() {
                        window.location.href = "/Disponibilite/Disponibilite";
                    }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectMatierels()">
                    <i class="fas fa-toolbox"></i> Materiels
<script>
function RedirectMatierels() {
                        window.location.href = "/Materiels/Materiel";
                    }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectBonAchat()">
                    <i class="fas fa-toolbox"></i> Bon d'Achat
                    <script>
function RedirectBonAchat() {
                        window.location.href = "/BonAchat/BonAchat";
                    }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectAffectation()">
                    <i class="fas fa-toolbox"></i> Affectation
<script>
function RedirectAffectation() {
                        window.location.href = "/Affectation/Affectation";
                    }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectMission()">
                    <i class="fas fa-toolbox"></i> Mission
                    <script>
function RedirectMission() {
                        window.location.href = "/Mission/ConsultMission";
                    }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectFournisseurs()">
                    <i class="fas fa-toolbox"></i> Fournisseurs
                    <script>
function RedirectFournisseurs() {
                        window.location.href = "/Fournisseurs/Fournisseurs";
                    }
</script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectList()">
                <i class="fas fa-toolbox"></i> Liste des Employees
                <script>
function RedirectList() {
                        window.location.href = "/List";
                    }
                </script>   
                </button>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container">
                <div class="row">
     
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-12">
                        <h1 class="mb-3">Créer un nouveau employer</h1>
                        @if (!String.IsNullOrWhiteSpace(message))
                        {
                            <div class="alert alert-success" role="alert">
                                @message
                            </div>
                        }
                    <form method="post" asp-page-handler="Create" class="mt-5">
                            <div class="form-group">
                                <label for="nom">Nom</label>
                                <input type="text" class="form-control" id="nom" name="NomEmployer" required asp-for="AddEmloyerViewModel.NomEmployer">
                            </div>
                            <div class="form-group">
                                <label for="prenom">Prenom</label>
                            <input type="text" class="form-control" id="prenom" name="PrenomEmployer" required asp-for="AddEmloyerViewModel.PrenomEmployer">
                            </div>
                            <div class="form-group">
                                <label for="motdepasse">Mot de passe</label>
                            <input type="password" class="form-control" id="motdepasse" name="PasswordEmployer" required asp-for="AddEmloyerViewModel.PasswordEmployer">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="EmailEmployer" required asp-for="AddEmloyerViewModel.EmailEmployer">
                            </div>
                        <div class="form-group">
                            <label for="email">Poste</label>
                            <input type="text" class="form-control" id="email" name="PosteEmployer" required asp-for="AddEmloyerViewModel.PosteEmployer">
                        </div>
                            <div class="form-group">
                                <label for="TelephoneEmployer">Telephone</label>
                                <input type="text" class="form-control" id="TelephoneEmployer" name="TelephoneEmployer" required asp-for="AddEmloyerViewModel.TelephoneEmployer">
                            </div>
                            <div class="form-group">
                                <label for="Services">Services</label>
                                <input type="text" class="form-control" id="Services" name="Services" required asp-for="AddEmloyerViewModel.Services">
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary" >Créer</button>
                                <button type="submit" class="btn btn-primary" onClick="RedirectRetourner()">Retourner
<script>
                                        function RedirectRetourner() {
                                            window.location.href = "/Home";
                                        }
                                    </script>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

