@page
@model AST1.Pages.BonAchat.BonAchatModel
@{
    var message = ViewData["Message"]?.ToString();

}
<title>Créer un Bon d'Achat</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 bg-black text-white p-3">
            <div class="mb-4">
                <h4>Name of the Logged In User</h4>
            </div>
            <div class="mb-4">
                <button class="btn btn-dark btn-block mb-2" onclick="RedirectAcceuil()">
                    <i class="fas fa-home"></i> Acceuil
                    <script>
                        function RedirectAcceuil() {
                            window.location.href = "/Home";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onclick="RedirectDisponibilite()">
                    <i class="fas fa-calendar-alt"></i> Disponibilité
                    <script>
                        function RedirectDisponibilite() {
                            window.location.href = "/Disponibilite/Disponibilite";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectMatierels()">
                    <i class="fas fa-toolbox"></i> Materiels
                    <script>
                        function RedirectMatierels() {
                            window.location.href = "/Materiels/Materiel";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectBonAchat()">
                    <i class="fas fa-toolbox"></i> Bon d'Achat
                    <script>
                        function RedirectBonAchat() {
                            window.location.href = "/BonAchat/BonAchat";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectAffectation()">
                    <i class="fas fa-toolbox"></i> Affectation
                    <script>
                        function RedirectAffectation() {
                            window.location.href = "/Affectation/Affectation";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectMission()">
                    <i class="fas fa-toolbox"></i> Mission
                    <script>
                        function RedirectMission() {
                            window.location.href = "/Mission/ConsultMission";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectFournisseurs()">
                    <i class="fas fa-toolbox"></i> Fournisseurs
                    <script>
                        function RedirectFournisseurs() {
                            window.location.href = "/Fournisseurs/Fournisseurs";
                        }
                    </script>
                </button>
                <button class="btn btn-dark btn-block mb-2" onClick="RedirectList()">
                    <i class="fas fa-toolbox"></i> Liste des Employees
                    <script>
                        function RedirectList() {
                            window.location.href = "/List";
                        }
                    </script>
                </button>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container">
                <div class="row">
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12">
                    <h1 class="mb-3">Créer un nouveau bon d'achat</h1>
                    @if (!String.IsNullOrWhiteSpace(message))
                    {
                        <div class="alert alert-success" role="alert">
                            @message
                        </div>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label for="DesignationOrder">DesignationOrder</label>
                            <input type="text" class="form-control" id="DesignationOrder" name="DesignationOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="ReferenceOrder">ReferenceOrder</label>
                            <input type="text" class="form-control" id="ReferenceOrder" name="ReferenceOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="QuantiteOrder">QuantiteOrder</label>
                            <input type="number" class="form-control" id="QuantiteOrder" name="QuantiteOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="QuantiteOrder">QtsOrder</label>
                            <input type="number" class="form-control" id="QtsOrder" name="QtsOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="QuantiteOrder">SnOrder</label>
                            <input type="number" class="form-control" id="SnOrder" name="SnOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="QuantiteOrder">InsOrder</label>
                            <input type="number" class="form-control" id="InsOrder" name="InsOrder" required>
                        </div>
                        <div class="form-group">
                            <label for="QuantiteOrder">IdProvider</label>
                            <input type="number" class="form-control" id="IdProvider" name="IdProvider" required>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Créer</button>
                            <button type="submit" class="btn btn-primary" onClick="RedirectRetourner()">
                                Retourner
                                <script>
                                    function RedirectRetourner() {
                                        window.location.href = "/Home";
                                    }
                                </script>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
